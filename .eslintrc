{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],
    "import/no-named-as-default": 0
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["@components", "./src/components"],
        ["@config", "./src/config"],
        ["@content", "./src/content"],
        ["@fonts", "./src/fonts"],
        ["@images", "./src/images"],
        ["@pages", "./src/pages"],
        ["@styles", "./src/styles"],
        ["@utils", "./src/utils"],
        ["@static", "./static"]
      ]
    }
  }
}
